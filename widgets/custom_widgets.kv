<MyFormField>:
    size_hint_y: None
    height: "50dp"
    orientation: "vertical"

    Label:
        text: root.field_label
        font_size: "12sp"
        color: 0, 0, 0, 1
        text_size: self.size
        halign: "left"
        valign: "bottom"
        size_hint_y: .7

    BoxLayout:
        orientation: "horizontal"

        TextInput:
            id: input_field
            multiline: False
            password: root.is_password and not root.visible_password 
            hint_text: root.hint_text

        Button:
            text: "show"
            size_hint_x: .3 if root.is_password else 0
            disabled: not root.is_password
            opacity: 1 if root.is_password else 0
            on_release:
                root.show_password()
            background_normal: ""
            background_color: root.show_btn_bg


<MyPopup>:
    title: root.msg_type
    size_hint: .8, .4
    background: ""
    background_color: root.bg_color

    BoxLayout:
        Label: 
            text: root.message
            text_size: self.size
            halign: "center"
            valign: "middle"


<MyRoundedButton>:
    background_normal: ""
    background_color: 0,0,0,0
    text: root.text
    font_size: self.height * .45
    size_hint: .6, None
    height: "40dp"
    on_state:
        root.bg_color = (0.7, 0.7, 0.7, 1) if self.state == "down" else root.original_bg_color
    
    canvas.before:
        Color:
            rgba: root.bg_color
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [dp(25)]


<MyDepositWithdrawPopupWindow>:
    size_hint: 1, 0.4
    background_color: 0.988, 0.925, 0.988, 1
    background: ""
    pos_hint: {'center_x': 0.5, 'center_y': -.2  + root._new_y_pos}
    on_open: root.animated_window_entry()

    BoxLayout:
        orientation: "vertical"
        padding: "20dp"
        spacing: "15dp"

        Label:
            text: "Enter" + (" deposit " if root.movement_type == 0 else " withdraw ") + "amount:"
            color: 0, 0, 0, 1
            font_size: self.height * .5

        TextInput:
            id: amount_field
            multiline: False
            hint_text: "$ amount"
            size_hint: 1, .6
            input_filter: "float"
        
        TextInput:
            id: description_field
            hint_text: "(Optional) Add a description"

        Button:
            text: "Confirm"
            color: 0, 0, 0, 1
            background_normal: ''
            background_color: .5, 1, .5, .7
            on_release: root.confirm_movement()


<MyTransactionCard>:
    orientation: "vertical"
    size_hint: 1, None
    height: "65dp"
    padding: "5dp"

    canvas.before:
        Color:
            rgba: root.bg_color
        RoundedRectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: "horizontal"

        BoxLayout:
            orientation: "vertical"

            Label:
                text: root.transaction_date
                color: 0.68, 0.71, 0.75, 1
                font_size: self.height
                size_hint: 1, .6
                text_size: self.size
                halign: 'left'
                valign: 'top'
            
            Label:
                text: root.transaction_name
                color: 0.11, 0.259, 1, 1
                bold: True
                font_size: self.height 
        
        Label:
            text: '$' + str(root.transaction_amount)
            color: (0.11, 0.259, 1, 1) if root.transaction_amount > 0 else (1, 0.259, 0.11, 1)
            bold: True
            font_size: self.height * .8
            size_hint: .60, 1

    Label:
        text: root.transaction_description
        color: 0, 0.631, 1, 1
        text_size: self.size
        halign: "left"
        valign: "middle"
        shorten: True
        size_hint: 1., .9


<MyTransferCard>:
    orientation: "vertical"
    size_hint: 1, None
    height: "65dp"
    padding: "10dp"

    canvas.before:
        Color:
            rgba: root.bg_color
        RoundedRectangle:
            pos: self.pos
            size: self.size
            
    Label:
        text: root.user_name
        color: 0.15, 0.15, 0.35, 1
        bold: True
        font_size: self.height * .9
        text_size: self.size
        halign: "left"
        valign: "middle"
        shorten: True

    Label:
        text: "Account number: " + str(root.user_account)
        color: 0.15, 0.15, 0.35, 1
        text_size: self.size
        halign: "left"
        valign: "middle"


<MyTransferWindow>:
    size_hint: 1, 0.8
    background_color: 0.988, 0.925, 0.988, 1
    background: ""
    pos_hint: {"center_x": 0.5, "top": root._new_y_pos}
    on_open: root.animated_window_entry()

    BoxLayout:
        id: transfer_window_box
        orientation: "vertical"
        padding: "5dp"

        BoxLayout:
            orientation: "vertical"
            padding: "10dp"

            Label:
                text: "Select destination account to transfer:"
                color: 0, 0, 0, 1
                font_size: self.height * .235
                text_size: self.width, None
                halign: "center"
                valign: "bottom"
                size_hint: 1, .3

            ScrollView:
                do_scroll_x: False
                do_scroll_y: True

                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size
                
                BoxLayout:
                    id: users_transfer_box
                    orientation: "vertical"
                    size_hint: 1, None
                    height: self.minimum_height
                    padding: "5dp"
                    spacing: "5dp"


<SecondTransferWindow>:
    orientation: "vertical"
    padding: ["15dp","20dp","20dp","15dp"]
    spacing: "8dp"
    background_color: 0.988, 0.925, 0.988, 1
    background: ""

    Label:
        text: "Transfer confirm"
        font_size: self.height * .53
        color: 0, 0, 0, 1
        text_size: self.size
        halign: "center"
        valign: "middle"
        size_hint: 1, .33
    
    BoxLayout:
        orientation: "vertical"
        size_hint: 1, None
        height: "90dp"
        padding: "10dp"

        canvas.before:
            Color:
                rgba: .75, 0.71, 1, 1
            RoundedRectangle:
                pos: self.pos
                size: self.size

        Label:
            text: "Origin"
            color: 0.11, 0.259, 1, 1
            font_size: self.height * .8
            text_size: self.size
            halign: "left"
            valign: "top"

        BoxLayout:
            orientation: "horizontal"
            
            Label:
                text: "Accont number: " + str(root.origin_account)
                color: 0.11, 0.259, 1, 1
                font_size: self.height * .6
                text_size: self.size
                halign: "left"
                valign: "middle"

            BoxLayout:
                orientation: "vertical"
                size_hint: .7, 1
            
                Label:
                    text: "$ " + str(root.origin_balance)
                    color: 0.11, 0.259, 1, 1
                    font_size: self.height * .9
                    text_size: self.size 
                    halign: "center"
                    valign: "middle"
                    
                Label:
                    text: "Balance"
                    color: 0.11, 0.259, 1, 1
                    font_size: self.height
                    text_size: self.size
                    halign: "center"
                    valign: "bottom"
                    size_hint: 1, .4
    
    BoxLayout:
        orientation: "vertical"
        size_hint: 1, None
        height: "100dp"
        padding: "10dp"

        canvas.before:
            Color:
                rgba: 1, 0.71, 1, 1
            RoundedRectangle:
                pos: self.pos
                size: self.size
    
        Label:
            text: "Destination"
            color: 0.11, 0.259, 1, 1
            font_size: self.height * .9
            text_size: self.size
            halign: "left"
            valign: "top"

        Label:
            text: str(root.destination_name)
            color: 0.11, 0.259, 1, 1
            font_size: self.height * .7
            text_size: self.size
            halign: "left"
            valign: "center"

        Label:
            text: "Account number: " + str(root.destination_account)
            color: 0.11, 0.259, 1, 1
            text_size: self.size
            halign: "left"
            valign: "bottom"
            size_hint: 1, .6
        
    BoxLayout:
        orientation: "vertical"
        padding: "5dp"
        spacing: "10dp"

        Label:
            text: "Amount"
            font_size: self.height * 1
            color: 0, 0, 0, 1
            text_size: self.size
            halign: "left"
            valign: "middle"
            size_hint: 1, .35
        
        TextInput:
            id: transfer_amount
            hint_text: "$ amount"
            size_hint: 1, .8
            input_filter: "float"
            size_hint: 1, .45
        
        TextInput:
            id: tr_description_field
            hint_text: "(Optional) Add a description"

    BoxLayout:
        orientation: "vertical"
        padding: ["5dp", "0dp", "5dp", "10dp"]
        size_hint: 1, .4

        Button:
            text: "Confirm"
            color: 0, 0, 0, 1
            background_normal: ''
            background_color: .5, 1, .5, .7
            on_release: root.confirm_movement()


