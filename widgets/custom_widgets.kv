<MyConfirmationWindow>:
    size_hint: .8, 0.4
    background_color: 1, 0.325, 0.388, 1
    background: ""

    BoxLayout:
        orientation: "vertical"
    
        Label:
            text: 'Write "DELETE" and confirm'
            font_size: self.width * .08
            size_hint: 1, .9

        Label:
            text: "CAUTION: This action will delete all records in the database"
            text_size: self.size
            font_size: self.width * .04
            halign: "center"
            valign: "top"

        TextInput:
            id: confirm_delete
            size_hint: .8, .3
            pos_hint: {"center_x":.5}

        Button:
            text: "Confirm"
            size_hint: .8, .5
            pos_hint: {"center_x":.5}
            on_release: root.clear_all()